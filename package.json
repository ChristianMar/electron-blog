{
  "name": "electron-ts-base-app",
  "version": "1.0.0",
  "description": "",
  "main": "source/electron/main.js",
  "scripts": {
    "--- INSTALL ---": "install all dependency with yarn install-all-dependency",
    "remove-root-node-modules": "rm -rf ./node_modules || true",
    "remove-webapp-node-modules": "rm -rf ./source/app/webapp/node_modules || true",
    "remove-main-node-modules": "rm -rf ./source/app/main/node_modules || true",
    "remove-ui-node-modules": "rm -rf ./source/app/ui/node_modules || true",
    "remove-all-node-modules": "yarn remove-root-node-modules && yarn remove-webapp-node-modules && yarn remove-main-node-modules && yarn remove-ui-node-modules",
    "install-root-node-modules": "yarn",
    "install-webapp-node-modules": "cd ./source/app/webapp/ && yarn",
    "install-main-node-modules": "cd ./source/app/main/ && yarn",
    "install-ui-node-modules": "cd ./source/app/ui/ && yarn",
    "cleanup": "yarn remove-all-node-modules && yarn install-root-node-modules && yarn install-webapp-node-modules && yarn install-main-node-modules && yarn install-ui-node-modules",
    "--- RUN DEV ---": "run dev app with yarn electron-dev",
    "start-dev": "webpack-dev-server --config ./source/webpack/webpack.dev.js --mode development --env dev --no-devtool --hot",
    "--- FIX PROD FOLDER ---": "used by build",
    "remove-build-folder": "rm -rf build || true",
    "remove-release-folder-mac": "rm -rf release-mac || true",
    "remove-release-folder-win": "rm -rf release-win || true",
    "remove-release-folder-linux": "rm -rf release-linux || true",
    "--- BUILD PROD ---": "build prod and release app",
    "build": "yarn remove-build-folder && webpack --config ./source/webpack/webpack.main.prod.js --mode production --env prod && webpack --config ./source/webpack/webpack.renderer.prod.js --mode production --env prod",
    "package-mac": "yarn remove-release-folder-mac && node source/scripts/build-app.js --mac --publish=never",
    "package-linux": "yarn remove-release-folder-linux && node source/scripts/build-app.js --linux --publish=never",
    "package-windows": "yarn remove-release-folder-win && node source/scripts/build-app.js --win --publish=never",
    "--- UNPACK ASAR FILE ---": "unpack asar file with yarn show-package",
    "remove-unpacked-folder-on-unix": "rm -rf release/unpacked || true",
    "show-package-mac": "yarn remove-unpacked-folder-on-unix && npx asar extract release-mac/mac/React.app/Contents/Resources/app.asar release/unpacked"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ChristianMar/electron-ts-base-app.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/ChristianMar/electron-ts-base-app/issues"
  },
  "homepage": "https://github.com/ChristianMar/electron-ts-base-app#readme",
  "devDependencies": {
    "@babel/preset-typescript": "^7.17.12",
    "@typescript-eslint/eslint-plugin": "^5.28.0",
    "@typescript-eslint/parser": "^5.28.0",
    "concurrently": "^7.3.0",
    "css-loader": "^6.7.1",
    "electron": "^20.1.0",
    "electron-builder": "^23.3.3",
    "eslint": "^8.17.0",
    "eslint-plugin-react": "^7.30.0",
    "file-loader": "^6.2.0",
    "git-revision-webpack-plugin": "^5.0.0",
    "html-webpack-plugin": "^5.5.0",
    "sass": "^1.52.3",
    "sass-loader": "^13.0.0",
    "style-loader": "^3.3.1",
    "ts-loader": "^9.3.0",
    "ts-node": "^10.9.1",
    "typescript": "^4.7.3",
    "webpack": "^5.73.0",
    "webpack-cli": "^4.10.0",
    "webpack-dev-server": "^4.9.2",
    "webpack-merge": "^5.8.0"
  },
  "dependencies": {
    "@reduxjs/toolkit": "^1.8.2",
    "@types/node-polyglot": "^2.4.2",
    "@types/react-dom": "^18.0.5",
    "@types/react-redux": "^7.1.24",
    "@types/react-router-dom": "^5.3.3",
    "@types/redux": "^3.6.0",
    "async-mutex": "^0.3.2",
    "axios": "^0.27.2",
    "chalk": "3.0.0",
    "electron-is-dev": "^2.0.0",
    "final-form": "^4.20.7",
    "node-polyglot": "^2.4.2",
    "process": "^0.11.10",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-error-boundary": "^3.1.4",
    "react-final-form": "^6.5.9",
    "react-polyglot": "^0.7.2",
    "react-redux": "^8.0.2",
    "react-router-dom": "^6.3.0",
    "redux": "^4.2.0",
    "redux-thunk": "^2.4.1"
  }
}
